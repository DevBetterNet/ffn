@model GuidGeneratorModel


<form asp-controller="GuidGenerator" asp-action="Index" method="post">
    <div class="filed">
        <label class="label">How many GUIDs do you want (1-1000):</label>
    </div>

    <div class="field">
        <div class="columns">
            <div class="column">
                <div class="control">
                    @Html.TextBoxFor(model => model.NumberOfGuids, new { type = "number", min = "0", max="1000", step = "1", @class="input" })
                </div>
            </div>

            <div class="column">
                <div class="control">
                    <button class="button is-primary" type="submit">Send</button>
                </div>
            </div>
        </div>
    </div>

    <div class="filed">
        <label class="label">
            Results
        </label>
        <div class="control">
            <textarea class="textarea is-success" placeholder="Success textarea">@Html.Raw(Model.GuidGenerateInString)</textarea>
        </div>
    </div>
</form>